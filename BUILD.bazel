load("//tools:no_undefined.bzl", "cc_library")

package(features = ["layering_check"])

genrule(
    name = "public_headers",
    srcs = [
        "src/toxext.h",
        "src/toxext_util.h",
    ],
    outs = [
        "toxext/toxext.h",
        "toxext/toxext_util.h",
    ],
    cmd = """
        cp $(location src/toxext.h) $(GENDIR)/toxext/toxext/toxext/toxext.h
        cp $(location src/toxext_util.h) $(GENDIR)/toxext/toxext/toxext/toxext_util.h
    """,
)

cc_library(
    name = "toxext",
    srcs = [
        "src/toxext.c",
        "src/toxext.h",
        "src/toxext_util.h",
    ],
    hdrs = [":public_headers"],
    includes = ["."],
    visibility = ["//visibility:public"],
    deps = ["//c-toxcore"],
)
